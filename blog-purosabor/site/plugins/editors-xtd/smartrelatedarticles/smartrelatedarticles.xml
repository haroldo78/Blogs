	<name>Button - Smart Related Articles</name>
	<author>Iacopo Guarneri</author>
	<creationDate>20140910</creationDate>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>iacopo.guarneri@alice.it</authorEmail><authorUrl>http://www.the-html-tool.com/</authorUrl>
	<version>1.0</version>
	<description>Related Articles Smart recommends related articles and with the modal window can change or add new</description>
	<files>
		<filename plugin="smartrelatedarticles">smartrelatedarticles.php</filename>
		<filename>index.html</filename>
		<filename>dialog.php</filename>
		<folder>chosen</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="n_art" type="text" default="3" label="Number related articles" description="" />
